PORT=3100

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=gostaresh_dev
DB_NAME_TEST=gostaresh_test

JWT_SECRET=change-me
JWT_EXPIRES_IN=7d

# CORS
# Comma-separated list of allowed origins. Use "*" to allow all.
CORS_ORIGINS=
# Allow requests without Origin header (server-to-server/curl)
CORS_ALLOW_NO_ORIGIN=true
# Trust proxy headers (set to 1 behind reverse proxy)
TRUST_PROXY=

# Swagger docs
# Set true to keep /docs public
DOCS_PUBLIC=false

# Rate limits (ms)
RATE_LIMIT_LOGIN_WINDOW_MS=900000
RATE_LIMIT_LOGIN_MAX=10
RATE_LIMIT_UPLOAD_WINDOW_MS=60000
RATE_LIMIT_UPLOAD_MAX=20
RATE_LIMIT_WARRANTY_WINDOW_MS=60000
RATE_LIMIT_WARRANTY_MAX=30

# Warranty API integration
WARRANTY_API_BASE=https://gswapi.gscrm.ir
# Format: Token USERNAME:PASSWORD
WARRANTY_API_TOKEN=

# (No session/redis config required)
